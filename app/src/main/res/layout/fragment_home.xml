<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_blue"
    android:padding="20dp"
    tools:context=".FragmentMenu.HomeFragment">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="70dp"
        android:layout_above="@id/other_menu"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_small" />

    <LinearLayout
        android:id="@+id/other_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="15dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/bordersmall"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Lessons"
            android:fontFamily="@font/blanka"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:letterSpacing=".2"
            android:id="@+id/btn_lesson"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/bordersmall"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Assessment"
            android:fontFamily="@font/blanka"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:letterSpacing=".2"
            android:id="@+id/btn_assessment"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/bordersmall"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Glossary"
            android:fontFamily="@font/blanka"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:letterSpacing=".2"
            android:id="@+id/btn_glossary"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/bordersmall"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Quit"
            android:fontFamily="@font/blanka"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:letterSpacing=".2"
            android:id="@+id/btn_exit"/>

    </LinearLayout>

</RelativeLayout>