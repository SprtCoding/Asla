<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lesson_bg"
    android:contentDescription="@string/app_name"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Menu.ModuleLessons.Lesson1.Lesson_1">

    <ImageView
        android:elevation="5dp"
        android:translationZ="2dp"
        android:layout_alignParentStart="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:rotation="180"
        android:src="@drawable/arrowhead"
        android:id="@+id/back_btn"/>

    <com.github.barteksc.pdfviewer.PDFView
        android:layout_below="@id/back_btn"
        android:layout_marginTop="20dp"
        android:id="@+id/pdfView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.google.android.material.button.MaterialButton
        android:layout_alignBottom="@id/pdfView"
        android:layout_centerHorizontal="true"
        android:id="@+id/start_post_test_btn"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Post Test"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:fontFamily="@font/blanka"
        android:textSize="18sp"
        app:cornerRadius="35dp"
        android:backgroundTint="#23BE87"/>

</RelativeLayout>