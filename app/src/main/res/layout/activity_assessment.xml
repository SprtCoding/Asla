<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:padding="20dp"
    tools:context=".Menu.Assessment">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/arrowhead"
        android:rotation="180" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/back_btn"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assessments"
        android:fontFamily="@font/blanka"
        android:textColor="@color/white"
        android:layout_alignBottom="@id/logo"
        android:layout_alignEnd="@id/logo"
        android:layout_marginEnd="20dp"
        android:textSize="25sp"
        android:letterSpacing=".2"/>

    <TextView
        android:id="@+id/cat_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:fontFamily="@font/blanka"
        android:textColor="@color/white"
        android:layout_below="@id/logo"
        android:layout_marginTop="80dp"
        android:layout_alignStart="@id/logo"
        android:layout_alignEnd="@id/logo"
        android:textAlignment="center"
        android:textSize="30sp"
        android:letterSpacing=".2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_below="@id/cat_ll"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/bordersmall"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Easy"
            android:fontFamily="@font/blanka"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:letterSpacing=".2"
            android:id="@+id/btn_easy"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/bordersmall"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Moderate"
            android:fontFamily="@font/blanka"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:letterSpacing=".2"
            android:id="@+id/btn_moderate"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/bordersmall"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Hard"
            android:fontFamily="@font/blanka"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:letterSpacing=".2"
            android:id="@+id/btn_hard"/>

    </LinearLayout>

</RelativeLayout>