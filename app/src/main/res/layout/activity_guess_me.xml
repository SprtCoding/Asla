<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:padding="20dp"
    tools:context=".Menu.ModerateCategory.GuessMe">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/arrowhead"
        android:rotation="180"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/how_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/blanka"
        android:textColor="@color/orange"
        android:textSize="32sp"
        android:text="@string/how_to_play"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/guess_logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/guess_me_logo" />

            <TextView
                android:layout_toEndOf="@id/guess_logo"
                android:layout_alignBottom="@id/guess_logo"
                android:layout_marginStart="-20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/blanka"
                android:letterSpacing=".2"
                android:text="Guess Me"
                android:textColor="@color/white"
                android:textSize="30sp" />

        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_play"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/blanka"
            android:letterSpacing=".5"
            android:text="Play"
            android:textSize="22sp"
            app:cornerRadius="50dp" />

    </LinearLayout>

</RelativeLayout>